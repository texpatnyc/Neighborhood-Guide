<% include ../partials/head %>

		<h1>Services</h1>
		<span id="addNewLink">Find something useful in the neighborhood that you want to share?<br>
			<a href="/services/add-new">Click here to add it to the list!</a></span>

	<%- messages("message", locals) %>

	<div class="full-list">
	  <% services.forEach((service) => { %>
	  	<div class="listing"> 
  			<a href="/services/<%= service._id %>">
	  				<img src="<%= service.photoLink %>" class="center-cropped" />
		    	<h3><%= service.name.toUpperCase() %></h3>
		    	<h4>(<%= service.typeOfService %>)</h4>
		  	</a>
	    	<%= service.address %><br>
	    	<%= service.phone %><br>
	    	<a class="webUrl" href="<%= service.webUrl %>"><%= service.webUrl %></a>
		    <p class="item-description"><%= service.description %></p>
		 	</div>
	  <% }) %>
	</div>

<% include ../partials/footer %>