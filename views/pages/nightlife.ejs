<% include ../partials/head %>

<body>
	<header role='banner'>
		<h1>Neighborhood Guide - Nightlife</h1>
	</header>

	<main role='main'>
		<div class='nav'>
			<a href='./restaurants' class='box restaurantIcon'>
				<img src="./images/grid-world.png" class='main-icon'>
				<h2>Restaurants</h2>
			</a>
			<a href='./nightlife' class='box nightlifeIcon'>
				<img src="./images/grid-world.png" class='main-icon'>
				<h2>Nightlife</h2>
			</a>
			<a href='./services' class='box servicesIcon'>
				<img src="./images/grid-world.png" class='main-icon'>
				<h2>Services</h2>
			</a>
		</div>

	<%- messages('message', locals) %>

	<div class="full-list">
	  <% nightlife.forEach((nightlife) => { %>
	  	<a href='/nightlife/<%= nightlife._id %>'>
	  		<img src='<%= nightlife.photoLink %>' class="item-photo"><br>
		    <span class="item-name"><%= nightlife.name %></span><br>
		    <span class="item-typeOfVenue"><%= nightlife.typeOfVenue %></span><br>
		    <span class="item-address"><%= nightlife.address %></span><br>
		    <span class="item-phone"><%= nightlife.phone %></span><br>
		    <span class="item-webUrl"><%= nightlife.webUrl %></span><br>		    
		    <span class="item-description"><%= nightlife.description %></span><br>
		    <span class="item-addedBy">Added by: <%= nightlife.addedBy %></span>
		 	</a>
	  <% }) %>
	</div>
	
	</main>

<% include ../partials/footer %>