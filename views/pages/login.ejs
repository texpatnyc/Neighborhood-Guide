<% include ../partials/centered-head %>

	<div class="login">
		<h1>Login</h1>

			<%- messages("message", locals) %>

		<form class="loginForm" method="post" action="/auth/login">
			<input id="username" name="username" type="text" placeholder="Email Address" required></br>
			<input id="password" name="password" type="text" placeholder="Password" required></br>

			<% if (next) { %>
				<input name="next" type="hidden" value="<%=next%>">
			<% } %>

			<input name="submit" type="submit" value="Submit">
		</form>

		<h2>Don't have an account?<br>
		<a href="/signup">Sign Up</a></h2>


	</div>

<% include ../partials/footer %>